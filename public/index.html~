<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Meeting Assistant</title>
  <style>
    body {
      margin: 0;
      padding: 20px;
      background: #000;
      color: #fff;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      height: 100vh;
      overflow: hidden;
    }

    #transcript {
      font-size: 14px;
      margin-bottom: 15px;
      padding: 10px;
      background: #1a1a1a;
      border-radius: 6px;
      height: 30vh;
      overflow-y: auto;
    }

    #teleprompter {
      flex: 1;
      position: relative;
      overflow: hidden;
      background: #2a2a2a;
      border-radius: 8px;
    }

    .scroll-container {
      position: absolute;
      width: 100%;
      transition: transform 0.3s linear;
    }

    .response-text {
      font-size: 24px;
      line-height: 1.5;
      padding: 20px;
      white-space: pre-wrap;
    }
  </style>
</head>
<body>
  <div id="transcript"></div>
  <div id="teleprompter">
    <div class="scroll-container" id="scrollContainer"></div>
  </div>

  <script>
    const ws = new WebSocket(`wss://localhost:${window.location.port}`);
    const transcriptDiv = document.getElementById('transcript');
    const scrollContainer = document.getElementById('scrollContainer');
    let scrollPosition = 0;
    let isScrolling = false;

    function updateScroll() {
      const containerHeight = scrollContainer.offsetHeight;
      const teleprompterHeight = document.getElementById('teleprompter').offsetHeight;
      const maxScroll = Math.max(0, containerHeight - teleprompterHeight);
      
      if (scrollPosition < maxScroll) {
        scrollPosition += 1;
        scrollContainer.style.transform = `translateY(-${scrollPosition}px)`;
        requestAnimationFrame(updateScroll);
      } else {
        isScrolling = false;
      }
    }

    ws.onmessage = (event) => {
      const data = JSON.parse(event.data);
      
      if (data.transcript) {
        transcriptDiv.textContent = data.transcript;
      }
      
      if (data.aiResponse) {
        const responseDiv = document.createElement('div');
        responseDiv.className = 'response-text';
        responseDiv.textContent = data.aiResponse;
        scrollContainer.appendChild(responseDiv);
        
        if (!isScrolling) {
          isScrolling = true;
          updateScroll();
        }
      }
    };
  </script>
</body>
</html>